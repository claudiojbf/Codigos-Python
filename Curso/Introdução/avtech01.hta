<p>========================================================</p>
<script language="vbscript" type="text/vbscript">

Dim pnMichelin(2)
Dim pnBridgestone(2)
Dim pnGoodyear(2)
Dim pnContinental(2)
Dim pnYokohama(2)

Dim prMichelin(2) 
Dim prBridgestone(2)
Dim prGoodyear(2)
Dim prContinental(2)
Dim prYokohama(2)

Dim escolha, quantidade, total


pnMichelin(0) = "Michelin Aro 15 LTX Force 235/75R15 105T"
pnMichelin(1) = "Michelin Aro 16 LTX Force 265/70R16 112T" 
prMichelin(0) = 594
prMichelin(1) = 685

pnBridgestone(0) = "Bridgestone Aro 15 Potenza RE760 195/55R15 85W"
pnBridgestone(1) = "Bridgestone Aro 16 Turanza ER300 235/60R16 100H" 
prBridgestone(0) = 379
prBridgestone(1) = 499

pnGoodyear(0) = "Goodyear Aro 17 EfficientGrip Performance 225/45R17 94W"
pnGoodyear(1) = "Goodyear Aro 17 EfficientGrip Performance 225/45R17 94W" 
prGoodyear(0) = 379
prGoodyear(1) = 719

pnContinental(0) = "Continental Aro 14 ContiPowerContact 175/70R14 84T"
pnContinental(1) = "Continental Aro 14 ContiPowerContact 175/70R14 84T" 
prContinental(0) = 299
prContinental(1) = 204

pnYokohama(0) = "Yokohama  BluEarth ES32 145/65 R15 72H"
pnYokohama(1) = "Yokohama BluEarth ES32 165/60 R14 75T" 
prYokohama(0) = 460
prYokohama(1) = 480

Document.write("Essas são as opções de pneus disponiveis: ") & "<br>" 
	Document.write("1. " & " " & pnMichelin(0) & " valor R$ " & prMichelin(0)) & "<br>" 
	Document.write("2. " & " " & pnMichelin(1) & " valor R$ " & prMichelin(1)) & "<br>"
	Document.write("3. " & " " & pnBridgestone(0) & " valor R$ " & prBridgestone(0)) & "<br>"
	Document.write("4. " & " " & pnBridgestone(1) & " valor R$ " & prBridgestone(1)) & "<br>"
	Document.write("5. " & " " & pnGoodyear(0) & " valor R$ " & prGoodyear(0)) & "<br>"
	Document.write("6. " & " " & pnGoodyear(1) & " valor R$ " & prGoodyear(1)) & "<br>" 
	Document.write("7. " & " " & pnContinental(0) & " valor R$ " & prContinental(0)) & "<br>"
	Document.write("8. " & " " & pnContinental(1) & " valor R$ " & prContinental(1)) & "<br>"
	Document.write("9. " & " " & pnYokohama(0) & " valor R$ " & prYokohama(0)) & "<br>"
	Document.write("10. " & " " & pnYokohama(1) & " valor R$ " & prYokohama(1)) & "<br>" & "<br>"	
	
	escolha = inputbox("Escolha qual pneu você deseja: (de 1 a 10)")
	quantidade = inputbox("Quantos você quer:")
	
	if (escolha = 1) then
		total = prMichelin(0) * quantidade 
		Document.write("Você escolheu o pneu: "& pnMichelin(0) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
	
	if (escolha = 2) then
		total = prMichelin(1) * quantidade
		Document.write("Você escolheu o pneu: "& pnMichelin(1) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if

	if (escolha = 3) then
		total = prBridgestone(0) * quantidade
		Document.write("Você escolheu o pneu: "& pnBridgestone(0) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
	
	if (escolha = 4) then
		total = prBridgestone(1) * quantidade
		Document.write("Você escolheu o pneu: "& pnBridgestone(1) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if

	if (escolha = 5) then
		total = prGoodyear(0) * quantidade
		Document.write("Você escolheu o pneu: "& pnGoodyear(0) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if

	if (escolha = 6) then
		total = prGoodyear(1) * quantidade
		Document.write("Você escolheu o pneu: "& pnGoodyear(1) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
	
	if (escolha = 7) then
		total = prContinental(0) * quantidade
		Document.write("Você escolheu o pneu: "& pncontinental(0) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
	
	if (escolha = 8) then
		total = prContinental(1) * quantidade
		Document.write("Você escolheu o pneu: "& pnContinental(1) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
	
	if (escolha = 9) then
		total = prYokohama(0) * quantidade
		Document.write("Você escolheu o pneu: "& pnYokohama(0) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if

	if (escolha = 10) then
		total = prYokohama(1) * quantidade
		Document.write("Você escolheu o pneu: "& pnYokohama(1) & ", quantidade: " & quantidade &" " & "e sua compra deu: R$" & total)	
	end if
    

</script>

